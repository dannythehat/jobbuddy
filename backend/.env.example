# Server Configuration
PORT=3001
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=90d
JWT_COOKIE_EXPIRES_IN=90

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=jobbuddy
DB_USER=postgres
DB_PASSWORD=password

# n8n Configuration
N8N_URL=http://localhost:5678
N8N_API_KEY=your_n8n_api_key_here

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Email Configuration
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USERNAME=your_email@example.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=noreply@jobbuddy.com

# File Upload Configuration
MAX_FILE_SIZE=5000000 # 5MB in bytes
UPLOAD_PATH=./uploads

# Frontend URL (for CORS and email links)
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes in milliseconds
RATE_LIMIT_MAX=100 # Maximum 100 requests per window

# Logging
LOG_LEVEL=debug # Options: error, warn, info, http, verbose, debug, silly

# Phase 7: OAuth Token Encryption
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your_encryption_key_here_64_characters_hex

# ============================================
# GCP CLOUD RUN CONFIGURATION (Production)
# ============================================

# Cloud Run Environment
CLOUD_RUN=false # Set to true when running on Cloud Run

# Cloud SQL Connection (Unix socket for Cloud Run)
# When CLOUD_RUN=true, use Unix socket path
INSTANCE_CONNECTION_NAME=PROJECT_ID:REGION:jobbuddy-db
DB_SOCKET_PATH=/cloudsql/PROJECT_ID:REGION:jobbuddy-db

# GCP Production Database (Cloud SQL)
# DB_HOST=/cloudsql/PROJECT_ID:REGION:jobbuddy-db  # Unix socket
# DB_PORT=5432
# DB_NAME=jobbuddy_prod
# DB_USER=jobbuddy_user
# DB_PASSWORD - Injected from Secret Manager (jobbuddy-db-password)

# GCP Secrets (Auto-injected by Cloud Run)
# These are set via --set-secrets flag in Cloud Run deployment
# DB_PASSWORD - from Secret Manager: jobbuddy-db-password:latest
# JWT_SECRET - from Secret Manager: jobbuddy-jwt-secret:latest
# OPENAI_API_KEY - from Secret Manager: jobbuddy-openai-key:latest
# ENCRYPTION_KEY - from Secret Manager: jobbuddy-encryption-key:latest

# Cloud Run Service URLs (Production)
# FRONTEND_URL=https://jobbuddy-frontend-REGION.a.run.app
# BACKEND_URL=https://jobbuddy-backend-REGION.a.run.app

# GCP Project Configuration
# PROJECT_ID=your-gcp-project-id
# REGION=us-central1
